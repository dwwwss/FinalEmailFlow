@model WORKFLOW.Models.ForgotPasswordModel

@{
    ViewBag.Title = "Forgot Password";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Forgot Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ZwU6H7KohKJi+cUMG3sIH2bSSa+AH+9asMm8GGI7ryY3QQmD4z5W2MaJJ6ZgLYaf" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center mb-4">Reset Password</h2>
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "mt-5" }))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label font-weight-bold" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary">Send Reset Email</button>
                }
                <div class="text-center mt-3">
                    <a href="~/Account/Login" class="btn btn-secondary">Back</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
